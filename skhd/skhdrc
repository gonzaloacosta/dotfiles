# APPS #
#
# Safari
alt - s : run-external "open" "-a" "/Applications/Safari.app/Contents/MacOS/Safari"

# MS Teams
alt - t : run-external "open" "-a" "/Applications/Microsoft Teams.app/Contents/MacOS/MSTeams"

# Whatsapp
alt - t : run-external "open" "-a" "/Applications/WhatsApp.app/Contents/MacOS/WhatsApp"

# Show date
alt - d : osascript ~/.config/skhd/applescripts/pop.scpt

# Close notifications
ralt - n : osascript ~/.config/skhd/applescripts/notifications.scpt

# Min
ralt - m : run-external "open" "-a" "/Applications/Min.app/Contents/MacOS/Min"

# Chrome
ralt - c : run-external "open" "-a" "/Applications/Google Chrome.app/Contents/MacOS/Google Chrome"

# Ghostty
alt - g : run-external "open" "-a" "/Applications/Ghostty.app"
